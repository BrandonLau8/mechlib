# AWS S3 Configuration
AWS_S3_BUCKET=your-bucket-name
AWS_PROFILE=default
AWS_REGION=us-east-1

# PostgreSQL (pgvector) Configuration
PSQL_HOST=localhost
PSQL_PORT=6432
PSQL_DATABASE=mechlib
PSQL_USER=mechlib_user
PSQL_PASSWORD=your-secure-password

# Embedding Provider Configuration
# Options: ollama, gemini
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text

# OpenAI API (only if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=

# Google Gemini API (only if EMBEDDING_PROVIDER=gemini)
GEMINI_API_KEY=

# Google OAuth Configuration (for user authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# JWT Configuration (for session management)
# Generate JWT_SECRET_KEY with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-replace-with-generated-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LangSmith Tracing (optional)
LANGSMITH_API_KEY=
LANGSMITH_TRACING=false
